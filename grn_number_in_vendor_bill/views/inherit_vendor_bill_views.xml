<odoo>
    <data>
        <record id="view_move_form_inherit_vendor_number" model="ir.ui.view">
            <field name="name">account.move.form.inherit.vendor.number</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="grn_number" invisible="move_type != 'in_invoice'" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
