<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="CashDenominationSearch">
        <div class="table_main_view center mt-3">
            <table class="table table-bordered table-hover align-middle">
                <t t-if="result">
                    <thead class="table-light">
                        <tr>
                            <th class="col-md-3 text-center">Date</th>
                            <th class="col-md-4 text-start">Person</th>
                            <th class="col-md-2 text-center">Counter</th>
                            <th class="col-md-3 text-end">Total</th>
                            <th class="col-md-3 text-center">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="result" t-as="o" t-key="o.id">
                            <tr>
                                <td class="text-center">
                                    <t t-esc="o['date']"/>
                                </td>
                                <td class="text-start">
                                    <t t-esc="o['user'][1]"/>
                                </td>
                                <td class="text-center">
                                    <t t-esc="o['counter']"/>
                                </td>
                                <td class="text-end fw-semibold">
                                    <t t-esc="o['grand_total']"/>
                                </td>
                                <td class="text-center">
                                    <t t-esc="o['state']"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </t>
                <t t-if="!result or result.length === 0">
                    <tbody>
                        <tr>
                            <td colspan="4" class="text-center text-muted py-3">
                            No records found.
                            </td>
                        </tr>
                    </tbody>
                </t>
            </table>
        </div>
    </t>

</templates>
