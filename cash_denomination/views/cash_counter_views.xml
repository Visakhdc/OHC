<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_cash_counter_list" model="ir.ui.view">
            <field name="name">cash.counter.list</field>
            <field name="model">cash.counter</field>
            <field name="arch" type="xml">
                <list string="Cash Counter">
                    <field name="cash_counter"/>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="view_cash_counter_form" model="ir.ui.view">
            <field name="name">cash.counter.form</field>
            <field name="model">cash.counter</field>
            <field name="arch" type="xml">
                <form string="Cash Counter">
                    <sheet>
                        <group>
                            <field name="cash_counter"/>
                            <field name="name" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_cash_counter" model="ir.actions.act_window">
            <field name="name">Cash Counter</field>
            <field name="res_model">cash.counter</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create your first cash counter record
                </p>
            </field>
        </record>

        <menuitem id="menu_cash_counter" name="Cash Counter" parent="website.menu_website_global_configuration" action="action_cash_counter" sequence="210"/>
    </data>
</odoo>