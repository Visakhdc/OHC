                        <div class="modal fade" id="petty_cash_modal" tabindex="-1" aria-labelledby="pettyCashModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg modal-dialog-centered">
                                <div class="modal-content">

                                    <div class="modal-header bg-primary text-white justify-content-center">
                                        <h4 class="modal-title text-center w-100" id="pettyCashModalLabel">Add Petty Cash Denomination</h4>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>

                                    <div class="modal-body">
                                        <form id="petty_cash_form" action="/petty/cash/submit" method="post">
                                            <input type="hidden" name="from_selected_counter" id="from_selected_counter"/>
                                            <input type="hidden" name="logged_user" id="logged_user"/>
                                            <input type="hidden" name="created_date" id="created_date"/>

                                            <div class="mb-3 d-flex align-items-center" style="margin-left:15px;">
                                                <label for="petty_to_user" class="form-label me-2 mb-0" style="min-width:90px;">To User</label>
                                                <select id="petty_to_user" name="petty_to_user" class="form-select" style="width:250px;" required="required">
                                                    <option value="">Select User</option>
                                            </select>
                                        </div>

                                        <table class="table table-bordered text-center">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>Count</th>
                                                    <th>Currency</th>
                                                    <th>Total</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr t-foreach="denominations" t-as="val">
                                                    <td>
                                                        <input type="number" min="0" t-att-name="'petty_counts_%s' % val" class="form-control petty-counts-input" t-att-data-value="val"/>
                                                    </td>
                                                    <td>
                                                        <input type="text" class="form-control" t-att-value="val" readonly="readonly"/>
                                                    </td>
                                                    <td>
                                                        <input type="text" class="form-control petty-total-field" readonly="readonly"/>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>

                                        <div class="d-flex justify-content-center align-items-center mt-4 position-relative" style="margin-bottom:30px;">
                                            <div class="mx-auto">
                                                <button type="submit" class="btn btn-primary me-2">Submit</button>
                                                <button type="button" class="btn" style="background-color: #bcb9bc;" data-bs-dismiss="modal">Cancel</button>
                                            </div>

                                            <div class="position-absolute" style="right: 0;">
                                                <strong>Total Petty Cash: </strong>
                                                <input type="text" id="petty_grand_total" class="form-control d-inline-block text-end" style="width:150px;margin-right:10px" readonly="readonly"/>
                                            </div>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>

                </section>
            </div>

            <!-- Cash Transfer Modal -->
            <div class="modal fade" id="transfer-modal" tabindex="-1" aria-labelledby="transfer-modal-label">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="text-center mb-4" id="transfer-modal-label">Transfer Cash to Another Counter</h4>
                            <button type="button" class="btn-close btn-close-black" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="transfer_form" action="/cash/transfer/submit" method="post">
                                <input type="hidden" name="from_counter" id="from_counter"/>
                                <input type="hidden" name="cash_in_hand" id="transfer_cash_in_hand"/>
                                <input type="hidden" name="logged_user" id="logged_user"/>

                                <div class="mb-3">
                                    <label for="to_counter" class="form-label">Transfer To Counter</label>
                                    <select id="to_counter" name="to_counter" class="form-control" required="required">
                                        <t t-foreach="to_counter" t-as="ctr">
                                            <option t-att-value="ctr.id">
                                                <t t-esc="ctr.bill_counter"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="transfer_to_user" class="form-label">User</label>
                                    <select id="transfer_to_user" name="transfer_to_user" class="form-control" required="required">
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="transfer_amount" class="form-label">Amount</label>
                                    <input type="number" name="transfer_amount" id="transfer_amount" min="1" t-att-value="'0.00'" class="form-control" required="required"/>
                                </div>
                                <div class="mb-3">
                                    <label for="remarks" class="form-label">Remarks</label>
                                    <textarea name="remarks" id="remarks" class="form-control" rows="2" placeholder="Optional notes"></textarea>
                                </div>
                                <div class="d-flex justify-content-center align-items-center mt-4 position-relative">
                                    <div class="mx-auto">
                                        <button type="submit" class="btn btn-primary px-4">Transfer</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>




            <!-- Transfer Details Modal -->
            <div class="modal fade" id="transfer-details-modal" tabindex="-1" aria-labelledby="transfer-details-modal-label" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="transfer-details-modal-label">Transfer Details</h4>
                            <button type="button" class="btn-close btn-close-black" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">

                            <!-- Outgoing Transfers -->
                            <h5>Transfers by You</h5>
                            <table class="table table-bordered table-striped text-center mb-4">
                                <thead class="table-light">
                                    <tr>
                                        <th>From Counter</th>
                                        <th>To Counter</th>
                                        <th>Amount</th>
                                        <th>To User</th>
                                        <th>Remarks</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="outgoing_transfers" t-as="tr">
                                        <td>
                                            <t t-esc="tr['from_counter']"/>
                                        </td>
                                        <td>
                                            <t t-esc="tr['to_counter']"/>
                                        </td>
                                        <td>
                                            <t t-esc="tr['amount']"/>
                                        </td>
                                        <td>
                                            <t t-esc="tr['transfer_to_user']"/>
                                        </td>
                                        <td>
                                            <t t-esc="tr['remarks']"/>
                                        </td>
                                        <td>
                                            <t t-esc="tr['local_create']"/>
                                        </td>
                                    </tr>
                                    <tr t-if="not outgoing_transfers">
                                        <td colspan="6">No transfers made by you today</td>
                                    </tr>
                                </tbody>
                            </table>

                            <!-- Incoming Transfers -->
                            <h5>Transfers to You</h5>
                            <table class="table table-bordered table-striped text-center">
                                <thead class="table-light">
                                    <tr>
                                        <th>From Counter</th>
                                        <th>From User</th>
                                        <th>Amount</th>
                                        <th>Remarks</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="incoming_transfers" t-as="tr">
                                        <td>
                                            <t t-esc="tr['from_counter']"/>
                                        </td>
                                        <td>
                                            <t t-esc="tr['transferred_by']"/>
                                        </td>
                                        <td>
                                            <t t-esc="tr['amount']"/>
                                        </td>
                                        <td>
                                            <t t-esc="tr['remarks']"/>
                                        </td>
                                        <td>
                                            <t t-esc="tr['local_create']"/>
                                        </td>
                                    </tr>
                                    <tr t-if="not incoming_transfers">
                                        <td colspan="5">No transfers received today</td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
            <!-- Petty Cash Review Modal -->
            <div class="modal fade" id="pettyCashReviewModal" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header bg-info text-white">
                            <h5 class="modal-title">Pending Petty Cash</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p>
                                <strong>From User:</strong>
                                <span id="modal_from_user"></span>
                            </p>
                            <p>
                                <strong>Counter:</strong>
                                <span id="modal_counter"></span>
                            </p>
                            <p>
                                <strong>Date:</strong>
                                <span id="modal_date"></span>
                            </p>
                            <p>
                                <strong>Amount:</strong> ₹                                    
                                <span id="modal_amount"></span>
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-success" id="accept_petty_cash">Accept</button>
                            <button type="button" class="btn btn-danger" id="reject_petty_cash" data-bs-dismiss="modal">Reject</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Validation Modal -->
            <div class="modal fade" id="validation-modal" tabindex="-1" aria-labelledby="validation-modal-label" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">

                        <div class="modal-header bg-warning text-dark">
                            <h5 class="modal-title fw-bold text-center w-100" id="validation-modal-label">Validation Error</h5>
                            <button type="button" class="btn-close btn-close-black" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body text-center">
                            <p class="fs-5">The total calculated amount does not match the cash in hand.</p>
                            <p class="text-muted">Please review your denomination entries and try again.</p>
                        </div>

                        <div class="modal-footer d-flex justify-content-center">
                            <button type="button" class="btn btn-primary px-4" data-bs-dismiss="modal">OK</button>
                        </div>

                    </div>
                </div>
            </div>

            <!-- Cash Denomination Submission Modal -->
            <div class="modal fade" id="success-modal" tabindex="-1" aria-labelledby="success-modal-label" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content text-center p-3">
                        <div class="modal-header bg-primary text-white">
                            <h5 class="modal-title fw-bold text-center w-100" id="same-counter-modal-label">
                                successfully submitted
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p>Your cash denomination has been successfully submitted.</p>
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button type="button" class="btn btn-primary px-4" data-bs-dismiss="modal">OK</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Cash Transfer Success Modal -->
            <div class="modal fade" id="transfer-success-modal" tabindex="-1" aria-labelledby="transfer-success-modal-label" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content text-center p-3">
                        <div class="modal-header bg-primary text-white">
                            <h5 class="modal-title fw-bold text-center w-100" id="transfer-success-modal-label">
                                Transfer Successful
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p>Your cash transfer has been successfully submitted.</p>
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button type="button" class="btn btn-primary px-4" data-bs-dismiss="modal">OK</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Insufficient Cash Validation Modal -->
            <div class="modal fade" id="insufficient-cash-modal" tabindex="-1" aria-labelledby="insufficient-cash-modal-label" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content text-center p-3">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title fw-bold text-center w-100" id="insufficient-cash-modal-label">
                                    Transfer Failed
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p class="fs-5">You don’t have enough cash in hand to make this transfer.</p>
                            <p class="text-muted">Please enter a smaller amount and try again.</p>
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button type="button" class="btn btn-primary px-4" data-bs-dismiss="modal">OK</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- No Cash To Transfer Modal -->
            <div class="modal fade" id="no-cash-modal" tabindex="-1" aria-labelledby="no-cash-modal-label" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header bg-warning text-dark">
                            <h5 class="modal-title fw-bold text-center w-100" id="no-cash-modal-label">No Cash to Transfer</h5>
                            <button type="button" class="btn-close btn-close-black" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p class="fs-5 text-center w-100">You have no cash in hand to transfer.</p>
                            <p class="text-muted text-center w-100">Please check your cash in hand and try again later.</p>
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button type="button" class="btn btn-primary px-4" data-bs-dismiss="modal">OK</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="no-cash-modal-petty" tabindex="-1" aria-labelledby="no-cash-modal-label" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header bg-warning text-dark">
                            <h5 class="modal-title fw-bold text-center w-100" id="no-cash-modal-label">No Cash </h5>
                            <button type="button" class="btn-close btn-close-black" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p class="fs-5 text-center w-100">You have no cash in hand.</p>
                            <p class="text-muted text-center w-100">Please check your cash in hand and try again later.</p>
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button type="button" class="btn btn-primary px-4" data-bs-dismiss="modal">OK</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- No Count Entered Modal -->
            <div class="modal fade" id="no-count-modal" tabindex="-1" aria-labelledby="noCountModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header bg-warning text-dark">
                            <h5 class="modal-title text-center w-100" id="noCountModalLabel">No Counts Entered</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-center">
                                Please enter at least one denomination count before submitting.
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <button type="button" class="btn btn-primary px-4" data-bs-dismiss="modal">OK</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Already Submitted Modal -->
            <div class="modal fade" id="already-submitted-modal" tabindex="-1" aria-labelledby="already-submitted-modal-label" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content text-center p-3">
                        <div class="modal-header bg-warning text-dark">
                            <h5 class="modal-title fw-bold w-100" id="already-submitted-modal-label">
                                    Already Submitted
                            </h5>
                            <button type="button" class="btn-close btn-close-black" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
