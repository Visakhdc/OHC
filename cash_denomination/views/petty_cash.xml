<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_petty_cash_list" model="ir.ui.view">
            <field name="name">petty.cash.list</field>
            <field name="model">petty.cash</field>
            <field name="arch" type="xml">
                <list string="Petty Cashier">
                    <field name="date"/>
                    <field name="from_user"/>
                    <field name="to_user"/>
                    <field name="counter"/>
                    <field name="grand_total"/>
                </list>
            </field>
        </record>

        <record id="view_petty_cash_form" model="ir.ui.view">
            <field name="name">petty.cash.form</field>
            <field name="model">petty.cash</field>
            <field name="arch" type="xml">
                <form string="Petty Cashier">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,accepted,rejected"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="from_user"/>
                                <field name="to_user"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="counter"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Cash Denomination">
                                <field name="line_ids">
                                    <list editable="top">
                                        <field name="counts"/>
                                        <field name="currency"/>
                                        <field name="sub_total"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                        <div style="display: flex; justify-content: flex-end; align-items: center; margin-top: 10px; gap: 8px; margin-left:1350px">
                            <span style="font-weight: bold; font-size: 16px;">Total:</span>
                            <field name="grand_total" readonly="1" class="o_field_number o_field_number_currency" style="font-weight: bold; font-size: 16px; width: 120px;"/>
                        </div>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_petty_cash" model="ir.actions.act_window">
            <field name="name">Petty Cash</field>
            <field name="res_model">petty.cash</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create your first Petty cash record
                </p>
            </field>
        </record>

        <menuitem id="menu_petty_cash" name="Petty Cash" parent="care_connector.menu_main_cash_denomination" action="action_petty_cash" sequence="3"/>
    </data>
</odoo>