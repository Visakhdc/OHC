<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_cash_transfer_list" model="ir.ui.view">
            <field name="name">cash.transfer.list</field>
            <field name="model">cash.transfer</field>
            <field name="arch" type="xml">
                <list string="Cash Transfer">
                    <field name="date"/>
                    <field name="name"/>
                    <field name="from_counter"/>
                    <field name="to_counter"/>
                    <field name="amount"/>
                    <field name="remarks"/>
                </list>
            </field>
        </record>

        <record id="view_cash_transfer_form" model="ir.ui.view">
            <field name="name">cash.transfer.form</field>
            <field name="model">cash.transfer</field>
            <field name="arch" type="xml">
                <form string="Cash Transfer">
                   <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="from_counter"/>
                                <field name="transfer_to_user"/>
                                <field name="to_counter"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="amount"/>
                                <field name="remarks"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_cash_transfer" model="ir.actions.act_window">
            <field name="name">Cash Transfer</field>
            <field name="res_model">cash.transfer</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create your first cash transfer record
                </p>
            </field>
        </record>

        <menuitem id="menu_cash_transfer" name="Cash Transfer" parent="website.menu_website_global_configuration" action="action_cash_transfer" sequence="300"/>
    </data>
</odoo>