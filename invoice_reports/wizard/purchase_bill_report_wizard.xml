<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="vendor_bill_report_view" model="ir.ui.view">
        <field name="name">vendor.bill.excel.wizard</field>
        <field name="model">vendor.bill.excel.wizard</field>
        <field name="arch" type="xml">
            <form string="Vendor Bill Excel Report">
                <group col="4">
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_print_excel" string="Print Excel" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_vendor_bill_report" model="ir.actions.act_window">
        <field name="name">Vendor Bill Excel Wizard</field>
        <field name="res_model">vendor.bill.excel.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="vendor_bill_report_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_vendor_bill_report_menu"
              name="Vendor Bill Report"
              sequence="3"
              action="action_vendor_bill_report"
              parent="menu_nvoice_report_menu"/>
</odoo>
