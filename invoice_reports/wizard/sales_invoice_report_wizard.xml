<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sales_invoice_report_view" model="ir.ui.view">
        <field name="name">sales.invoice.excel.wizard</field>
        <field name="model">sales.invoice.excel.wizard</field>
        <field name="arch" type="xml">
            <form string="Sales Invoice Excel Report">
                <group col="4">
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="section_type"/>
                </group>
                <footer>
                    <button name="action_print_excel" string="Print Excel" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_sales_invoice_report" model="ir.actions.act_window">
        <field name="name">sales Invoice</field>
        <field name="res_model">sales.invoice.excel.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sales_invoice_report_view"/>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_sales_invoice_report_menu" name="Sales Invoice Report" sequence="2" action="action_sales_invoice_report" parent="menu_nvoice_report_menu"/>

</odoo>
