<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="view_account_common_partner_report_inherit" model="ir.ui.view">
        <field name="name">account.report.inherit</field>
        <field name="model">account.report</field>
        <field name="inherit_id" ref="base_accounting_kit.account_report_view_form"/>

        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_to']" position="after">
                <field name="partner_ids" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//footer" position="inside">
                <button name="button_download_xlsx_report" string="XLSX Sheet" type="object" default_focus="1" class="oe_highlight" data-hotkey="q"/>
            </xpath>
        </field>

    </record>

</odoo>
