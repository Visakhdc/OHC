<odoo>
    <record id="partner_ledger_excel_wizard_view" model="ir.ui.view">
        <field name="name">partner.ledger.excel.wizard.form</field>
        <field name="model">partner.ledger.excel.wizard</field>
        <field name="arch" type="xml">
            <form string="Partner Ledger Excel Report">
                <group col="4">
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_export_excel" string="Print Excel" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_partner_ledger_excel_wizard" model="ir.actions.act_window">
        <field name="name">Partner Ledger Report</field>
        <field name="res_model">partner.ledger.excel.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="partner_ledger_excel_wizard_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_partner_ledger_excel_report"
              name="Partner Ledger Report"
              parent="excel_reports.menu_nvoice_report_menu"
              sequence="20"
              action="action_partner_ledger_excel_wizard"/>
</odoo>
