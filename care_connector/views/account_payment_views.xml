<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="view_account_payment_form">
        <field name="name">account.payment.view.form.inherit.care.connector</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/div[@class='oe_title']" position="before">
                <widget name="web_ribbon" title="Cancelled" bg_color="text-bg-danger" invisible="not cancel_status"/>
            </xpath>
            <xpath expr="//field[@name='payment_method_line_id']" position="after">
                <field name="x_care_id" readonly="1"/>
                <field name="location"/>
                <field name="cashier"/>
            </xpath>
        </field>
    </record>
</odoo>