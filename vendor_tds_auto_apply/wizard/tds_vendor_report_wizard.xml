<odoo>
    <record id="view_tds_vendor_report_wizard" model="ir.ui.view">
        <field name="name">tds.vendor.report.wizard.form</field>
        <field name="model">tds.vendor.report.wizard</field>
        <field name="arch" type="xml">
            <form string="TDS Vendor Excel Report">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="vendor_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                    </group>
                    <group>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button string="Export" type="object" name="action_export_excel" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_tds_vendor_report_wizard" model="ir.actions.act_window">
        <field name="name">TDS Vendor Excel Report</field>
        <field name="res_model">tds.vendor.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_tds_vendor_report"
              name="TDS Vendor Report"
              parent="account.menu_finance_reports"
              action="action_tds_vendor_report_wizard"/>
</odoo>
