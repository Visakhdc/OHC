<odoo>
    <record id="view_account_discount_list" model="ir.ui.view">
        <field name="name">account.discount.list</field>
        <field name="model">account.discount</field>
        <field name="arch" type="xml">
            <list string="Predefined Discounts">
                <field name="name"/>
                <field name="x_care_id"/>
                <field name="amount"/>
            </list>
        </field>
    </record>

    <record id="view_account_discount_form" model="ir.ui.view">
        <field name="name">account.discount.form</field>
        <field name="model">account.discount</field>
        <field name="arch" type="xml">
            <form string="Predefined Discount">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="x_care_id"/>
                    </group>
                    <group>
                        <field name="discount_group"/>
                        <field name="amount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_account_discount" model="ir.actions.act_window">
        <field name="name">Predefined Discounts</field>
        <field name="res_model">account.discount</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_account_discount_heading"
              name="Discounts"
              parent="account.menu_finance_configuration"
              sequence="30"/>

    <menuitem id="menu_account_discount_root"
              name="Discounts"
              parent="menu_account_discount_heading"
              sequence="10"
              action="action_account_discount"/>
</odoo>
